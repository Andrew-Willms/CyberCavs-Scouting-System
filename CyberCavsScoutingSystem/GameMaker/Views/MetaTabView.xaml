<UserControl x:Class="GameMaker.Views.MetaTabView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:GameMaker"
			 xmlns:Domain="clr-namespace:CCSSDomain;assembly=CCSSDomain"
             mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=Domain:GameEditingData, IsDesignTimeCreatable=True}">
	
	<UserControl.Resources>
    </UserControl.Resources>

	<StackPanel>
        <TextBox DataContext="{Binding Path=TestInt}"
                 Style="{StaticResource TextBoxStringInputStyle}"
                 HorizontalAlignment="Left"
				 Margin="10,10,0,0"
                 TextWrapping="Wrap"
				 VerticalAlignment="Top"
				 Width="120">
        </TextBox>

		<TextBox HorizontalAlignment="Left" Margin="10,10,0,0" Text="{Binding TestInt2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120">
			<Validation.ErrorTemplate>
				<ControlTemplate>
					<StackPanel>
						<!-- Placeholder for the TextBox itself -->
						<AdornedElementPlaceholder x:Name="textBox"/>
						<TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
					</StackPanel>
				</ControlTemplate>
			</Validation.ErrorTemplate>
        </TextBox>

    </StackPanel>
</UserControl>
