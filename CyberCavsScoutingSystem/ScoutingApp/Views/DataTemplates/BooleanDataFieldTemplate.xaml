<?xml version="1.0" encoding="utf-8"?>

<ContentView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:dataCollectors="clr-namespace:CCSSDomain.DataCollectors;assembly=CCSSDomain"
	x:Class="ScoutingApp.Views.DataTemplates.BooleanDataFieldInputView"
	x:DataType="dataCollectors:BooleanInputDataCollector">
	
	<VerticalStackLayout>

		<Label
			Text="{Binding Path=Label}"
			HorizontalTextAlignment="Center"
			VerticalTextAlignment="Center"/>

		<CheckBox 
			IsChecked="{Binding Path=Value}"
			MinimumHeightRequest="200"/>

	</VerticalStackLayout>

</ContentView>