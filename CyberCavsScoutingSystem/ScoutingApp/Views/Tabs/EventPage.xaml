<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabs="clr-namespace:ScoutingApp.Views.Tabs"
             x:Class="ScoutingApp.Views.Tabs.EventPage"
             x:DataType="tabs:EventPage">

	<VerticalStackLayout
		Margin="10"
		Spacing="10">

		<Label
			Text="Event"
			HorizontalTextAlignment="Start"/>

		<Picker ItemsSource="{Binding Path=Events, Converter={StaticResource ReadOnlyListOfStringsToIListConverter}}"/>

	</VerticalStackLayout>

</ContentPage>