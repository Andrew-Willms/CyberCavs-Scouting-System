<?xml version="1.0" encoding="UTF-8" ?>

<Shell
    x:Class="ScoutingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tabs="clr-namespace:ScoutingApp.Views.Tabs"
    FlyoutBehavior="Disabled">

	<TabBar>

		<ShellContent
			Title="Setup"
			ContentTemplate="{DataTemplate tabs:SetupTab}"
			Route="MainPage"/>

		<ShellContent
			Title="Auto"
			ContentTemplate="{DataTemplate tabs:AutoTab}"
			Route="MainPage2"/>

		<ShellContent
			Title="Tele"
			ContentTemplate="{DataTemplate tabs:TelePage}"
			Route="MainPage3"/>

		<ShellContent
			Title="Endgame"
			ContentTemplate="{DataTemplate tabs:EndgameTab}"
			Route="MainPage3"/>

		<ShellContent
			Title="Confirm"
			ContentTemplate="{DataTemplate tabs:ConfirmTab}"
			Route="MainPage3"/>

	</TabBar>

</Shell>