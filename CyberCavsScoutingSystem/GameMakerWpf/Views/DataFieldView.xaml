<UserControl x:Class="GameMakerWpf.Views.DataFieldView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameMakerWpf.Views"
             xmlns:domain="clr-namespace:GameMakerWpf.Domain"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=domain:DataFieldEditingData, IsDesignTimeCreatable=False}">

    <Border BorderThickness="1,1,1,1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Margin="5,5,5,5">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="200" MinWidth="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox DataContext="{Binding Path=Name}"
                     Style="{StaticResource StringInputStyle}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Top"
                     TextWrapping="Wrap"
                     Margin="5,5,5,5"
                     Width="Auto"
                     Grid.Column="0"/>

        </Grid>

    </Border>

</UserControl>
